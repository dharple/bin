#!/bin/sh
#
# gitr done
#

if [ "$1" = "composer" ] ; then
	shift
	composerr $@
	exit
fi

BASE=$(pwd)
for GITDIR in $(find -type d -name .git -not -path '*/vendor/*') ; do
	REPODIR=$(dirname $GITDIR)
	echo -------------------------------------
	echo $REPODIR
	echo -------------------------------------
	echo

	cd $BASE/$REPODIR
	git $@

	echo
done
